<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Psalms Reading</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <NavLink class="nav-link nav-item px-3" href="" Match="NavLinkMatch.All">
            <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
        </NavLink>
        <NavLink class="nav-link nav-item px-3" href="psalms">
            <span class="bi bi-list-ul-nav-menu" aria-hidden="true"></span> Psalms
        </NavLink>
        <NavLink class="nav-link nav-item px-3" href="readings">
            <span class="bi bi-calendar-check-nav-menu" aria-hidden="true"></span> Readings
        </NavLink>
        <NavLink class="nav-link nav-item px-3" href="schedule">
            <span class="bi bi-calendar-event-nav-menu" aria-hidden="true"></span> Schedule & ICS
        </NavLink>
    </nav>
</div>

@code {
    private bool _collapseNavMenu = true;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }
}
