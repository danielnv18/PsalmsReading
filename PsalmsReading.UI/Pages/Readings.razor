@page "/readings"
@inject ApiClient ApiClient

<PageTitle>Readings</PageTitle>

<div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-3">
    <div>
        <h1 class="mb-0">Readings</h1>
        <p class="text-muted mb-0">View Sunday readings by month and week.</p>
    </div>
    <div class="d-flex align-items-center gap-2">
        <button class="btn btn-outline-secondary" @onclick="() => ChangeYear(-1)" disabled="@_isLoading">
            Prev
        </button>
        <span class="fs-5 fw-semibold">@_year</span>
        <button class="btn btn-outline-secondary" @onclick="() => ChangeYear(1)" disabled="@_isLoading">
            Next
        </button>
    </div>
</div>

@if (_loadError is not null)
{
    <div class="alert alert-danger">@_loadError</div>
}

@if (_saveMessage is not null)
{
    <div class="alert alert-success">@_saveMessage</div>
}
@if (_saveError is not null)
{
    <div class="alert alert-danger">@_saveError</div>
}

<div class="card shadow-sm">
    <div class="card-body">
        @if (_isLoading)
        {
            <p><em>Loading readings...</em></p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 18%">Mes</th>
                            <th style="width: 16%">1er domingo</th>
                            <th style="width: 16%">2do domingo</th>
                            <th style="width: 16%">3er domingo</th>
                            <th style="width: 16%">4to domingo</th>
                            <th style="width: 16%">5to domingo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var month in Enumerable.Range(1, 12))
                        {
                            var slots = GetSundaySlots(_year, month);
                            <tr>
                                <th scope="row">@GetMonthName(month)</th>
                                @for (var index = 0; index < 5; index++)
                                {
                                    var slotDate = slots[index];
                                    if (slotDate is null)
                                    {
                                        <td></td>
                                    }
                                    else
                                    {
                                        var reading = GetReadingForDate(slotDate.Value);
                                        <td>
                                            <div class="d-flex flex-column gap-1">
                                                @if (reading is not null)
                                                {
                                                    <div class="fw-semibold">Salmo @reading.PsalmId - @GetPsalmTitle(reading.PsalmId)</div>
                                                    <div class="text-muted">Día @slotDate.Value.Day</div>
                                                    <a class="link-primary" href="@GetBibleLink(reading.PsalmId)" target="_blank" rel="noopener noreferrer">
                                                        Leer en Bible.com
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-secondary" @onclick="() => StartEdit(reading)">
                                                        Editar
                                                    </button>
                                                }
                                                else
                                                {
                                                    <div class="text-muted">Día @slotDate.Value.Day</div>
                                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => OpenCreate(slotDate.Value)">
                                                        Agregar
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    }
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@if (_showModal)
{
    <div class="modal fade show" style="display:block;" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@FormTitle</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="CancelEdit"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Psalm</label>
                        <select class="form-select" @bind="_selectedPsalmId">
                            <option value="0">Select a psalm</option>
                            @foreach (var psalm in _psalms)
                            {
                                <option value="@psalm.Id">@psalm.Id - @psalm.Title</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Date read</label>
                        <InputDate @bind-Value="_dateRead" class="form-control" />
                    </div>
                    @if (_modalError is not null)
                    {
                        <div class="alert alert-danger">@_modalError</div>
                    }
                </div>
                <div class="modal-footer">
                    @if (_editingId is not null)
                    {
                        <button class="btn btn-outline-danger me-auto" @onclick="() => DeleteReading(_editingId.Value)" disabled="@_isSaving">
                            Delete
                        </button>
                    }
                    <button class="btn btn-secondary" @onclick="CancelEdit" disabled="@_isSaving">Cancel</button>
                    <button class="btn btn-primary" @onclick="SaveReading" disabled="@(_isSaving || _selectedPsalmId <= 0)">
                        @(_isSaving ? "Saving..." : SubmitLabel)
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private List<PsalmDto> _psalms = [];
    private List<ReadingRecordDto> _readings = [];
    private Dictionary<DateOnly, ReadingRecordDto> _readingsByDate = [];
    private bool _isLoading = true;
    private bool _isSaving;
    private string? _loadError;
    private string? _saveError;
    private string? _saveMessage;
    private int _year = DateTime.Today.Year;
    private int _selectedPsalmId;
    private DateOnly _dateRead = DateOnly.FromDateTime(DateTime.Today);
    private Guid? _editingId;
    private bool _showModal;
    private string? _modalError;
    private string FormTitle => _editingId is null ? "Add reading" : "Edit reading";
    private string SubmitLabel => _editingId is null ? "Save" : "Update";

    protected override async Task OnInitializedAsync()
    {
        await LoadPsalms();
        await LoadReadings();
    }

    private async Task LoadPsalms()
    {
        try
        {
            _psalms = (await ApiClient.GetPsalmsAsync()).OrderBy(p => p.Id).ToList();
        }
        catch (Exception ex)
        {
            _loadError = ex.Message;
        }
    }

    private async Task LoadReadings()
    {
        try
        {
            _loadError = null;
            _isLoading = true;
            var start = new DateOnly(_year, 1, 1);
            var end = new DateOnly(_year, 12, 31);
            _readings = (await ApiClient.GetReadingsAsync(start, end)).ToList();
            _readingsByDate = BuildReadingsByDate(_readings);
        }
        catch (Exception ex)
        {
            _loadError = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task SaveReading()
    {
        if (_selectedPsalmId <= 0)
        {
            _saveError = "Please select a psalm.";
            return;
        }

        try
        {
            _saveError = null;
            _saveMessage = null;
            _modalError = null;
            _isSaving = true;

            if (await HasDuplicateReading(_selectedPsalmId, _dateRead, _editingId))
            {
                _modalError = "This psalm already has a reading on that date.";
                return;
            }

            if (_editingId is null)
            {
                await ApiClient.CreateReadingAsync(new CreateReadingRequest(_selectedPsalmId, _dateRead));
                _saveMessage = "Reading saved.";
            }
            else
            {
                await ApiClient.UpdateReadingAsync(_editingId.Value, new UpdateReadingRequest(_selectedPsalmId, _dateRead));
                _saveMessage = "Reading updated.";
            }

            await LoadReadings();
            CloseModal();
        }
        catch (Exception ex)
        {
            _modalError = ex.Message;
        }
        finally
        {
            _isSaving = false;
        }
    }

    private void StartEdit(ReadingRecordDto record)
    {
        _editingId = record.Id;
        _selectedPsalmId = record.PsalmId;
        _dateRead = record.DateRead;
        _saveMessage = null;
        _saveError = null;
        _modalError = null;
        _showModal = true;
    }

    private void OpenCreate(DateOnly dateRead)
    {
        _editingId = null;
        _selectedPsalmId = 0;
        _dateRead = dateRead;
        _saveMessage = null;
        _saveError = null;
        _modalError = null;
        _showModal = true;
    }

    private void CancelEdit()
    {
        CloseModal();
    }

    private void CloseModal()
    {
        _editingId = null;
        _selectedPsalmId = 0;
        _dateRead = DateOnly.FromDateTime(DateTime.Today);
        _saveMessage = null;
        _saveError = null;
        _modalError = null;
        _showModal = false;
    }

    private async Task DeleteReading(Guid id)
    {
        var confirm = await JsConfirm("Delete this reading? This cannot be undone.");
        if (!confirm)
        {
            return;
        }

        try
        {
            _isSaving = true;
            await ApiClient.DeleteReadingAsync(id);
            await LoadReadings();
            if (_editingId == id)
            {
                CancelEdit();
            }
        }
        catch (Exception ex)
        {
            _saveError = ex.Message;
        }
        finally
        {
            _isSaving = false;
        }
    }

    [Inject] private IJSRuntime JsRuntime { get; set; } = null!;

    private async Task<bool> JsConfirm(string message)
    {
        try
        {
            return await JsRuntime.InvokeAsync<bool>("confirm", message);
        }
        catch
        {
            return false;
        }
    }

    private string GetPsalmTitle(int id) =>
        _psalms.FirstOrDefault(p => p.Id == id)?.Title ?? "(not loaded)";

    private static string GetMonthName(int month) =>
        SpanishCulture.TextInfo.ToTitleCase(SpanishCulture.DateTimeFormat.GetMonthName(month));

    private string GetBibleLink(int psalmId) =>
        $"https://www.bible.com/bible/103/PSA.{psalmId}.NBLA";

    private ReadingRecordDto? GetReadingForDate(DateOnly date) =>
        _readingsByDate.GetValueOrDefault(date);

    private static Dictionary<DateOnly, ReadingRecordDto> BuildReadingsByDate(IEnumerable<ReadingRecordDto> readings)
    {
        var results = new Dictionary<DateOnly, ReadingRecordDto>();
        foreach (var record in readings)
        {
            results.TryAdd(record.DateRead, record);
        }

        return results;
    }

    private static IReadOnlyList<DateOnly?> GetSundaySlots(int year, int month)
    {
        var sundays = new List<DateOnly?>(5);
        var firstDay = new DateTime(year, month, 1);
        var offset = ((int)DayOfWeek.Sunday - (int)firstDay.DayOfWeek + 7) % 7;
        var firstSunday = firstDay.AddDays(offset);

        var current = firstSunday;
        while (current.Month == month)
        {
            sundays.Add(DateOnly.FromDateTime(current));
            current = current.AddDays(7);
        }

        while (sundays.Count < 5)
        {
            sundays.Add(null);
        }

        return sundays;
    }

    private async Task ChangeYear(int delta)
    {
        _year += delta;
        await LoadReadings();
    }

    private async Task<bool> HasDuplicateReading(int psalmId, DateOnly date, Guid? excludeId)
    {
        // Best-effort client-side check; API enforces uniqueness.
        var allReadings = await ApiClient.GetReadingsAsync();
        return allReadings.Any(r => r.PsalmId == psalmId && r.DateRead == date && r.Id != excludeId);
    }

    private static readonly System.Globalization.CultureInfo SpanishCulture = new("es-ES");
}
