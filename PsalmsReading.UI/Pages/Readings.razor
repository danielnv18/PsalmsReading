    private void ToggleMonthSelection(int year, int month)
    {
        IReadOnlyList<DateOnly?> slots = GetSundaySlots(year, month);
        List<DateOnly> dates = slots.Where(d => d.HasValue).Select(d => d.GetValueOrDefault()).ToList();
        bool allSelected = dates.All(_bulkSelectedDates.Contains);

        foreach (DateOnly date in dates)
        {
            if (allSelected)
            {
                _bulkSelectedDates.Remove(date);
            }
            else
            {
                _bulkSelectedDates.Add(date);
            }
        }
    }

    private bool IsMonthFullySelected(int year, int month)
    {
        IReadOnlyList<DateOnly?> slots = GetSundaySlots(year, month);
        List<DateOnly> dates = slots.Where(d => d.HasValue).Select(d => d.GetValueOrDefault()).ToList();
        return dates.Count > 0 && dates.All(_bulkSelectedDates.Contains);
    }

