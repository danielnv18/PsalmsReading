@page "/readings"
@using System.IO
@using System.Text
@using System.Text.Json
@using Microsoft.AspNetCore.Components.Forms
@using PsalmsReading.UI.Json
@inject ApiClient ApiClient

<PageTitle>Readings</PageTitle>

<div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-3">
    <div>
        <h1 class="mb-0">Readings</h1>
        <p class="text-muted mb-0">View Sunday readings by month and week.</p>
    </div>
    <div class="d-flex align-items-center gap-2">
        <button class="btn btn-outline-primary" @onclick="OpenExportModal" disabled="@_isSaving">
            Export
        </button>
        <button class="btn btn-outline-primary" @onclick="OpenImportModal" disabled="@_isSaving">
            Import
        </button>
        <button class="btn btn-outline-danger" @onclick="ToggleBulkDeleteMode" disabled="@_isSaving">
            @(_isBulkDeleteMode ? "Exit delete mode" : "Bulk delete")
        </button>
        <button class="btn btn-outline-secondary" @onclick="() => ChangeYear(-1)" disabled="@_isLoading">
            Prev
        </button>
        <span class="fs-5 fw-semibold">@_year</span>
        <button class="btn btn-outline-secondary" @onclick="() => ChangeYear(1)" disabled="@_isLoading">
            Next
        </button>
    </div>
</div>

@if (_loadError is not null)
{
    <div class="alert alert-danger">@_loadError</div>
}

@if (_saveMessage is not null)
{
    <div class="alert alert-success">@_saveMessage</div>
}
@if (_saveError is not null)
{
    <div class="alert alert-danger">@_saveError</div>
}

@if (_isBulkDeleteMode)
{
    <div class="alert alert-warning d-flex flex-wrap align-items-center gap-2">
        <span>Bulk delete mode: @GetBulkSelectedCount() dates selected.</span>
        <button class="btn btn-sm btn-outline-secondary" @onclick="ClearBulkSelection" disabled="@(!_bulkSelectedDates.Any() || _isSaving)">
            Clear selection
        </button>
        <button class="btn btn-sm btn-danger" @onclick="OpenBulkDeleteModal" disabled="@(!_bulkSelectedDates.Any() || _isSaving)">
            Delete selected
        </button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex flex-wrap gap-2 mb-3">
            <span class="type-badge type-lamento">Lamento</span>
            <span class="type-badge type-alabanza">Alabanza</span>
            <span class="type-badge type-himno">Himno</span>
            <span class="type-badge type-realeza">Realeza</span>
            <span class="type-badge type-sabiduria">Sabiduria</span>
            <span class="type-badge type-agradecimiento">Agradecimiento</span>
            <span class="type-badge type-confianza">Confianza</span>
        </div>
        @if (_isLoading)
        {
            <p><em>Loading readings...</em></p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 18%">Mes</th>
                            <th style="width: 16%">1er domingo</th>
                            <th style="width: 16%">2do domingo</th>
                            <th style="width: 16%">3er domingo</th>
                            <th style="width: 16%">4to domingo</th>
                            <th style="width: 16%">5to domingo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (int month in Enumerable.Range(1, 12))
                        {
                            IReadOnlyList<DateOnly?> slots = GetSundaySlots(_year, month);
                            <tr>
                                <th scope="row">
                                    <div class="d-flex align-items-center justify-content-between gap-2">
                                        <span>@GetMonthName(month)</span>
                                        @if (_isBulkDeleteMode)
                                        {
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => ToggleMonthSelection(_year, month)" type="button">
                                                @(IsMonthFullySelected(_year, month) ? "Clear" : "Select")
                                            </button>
                                        }
                                    </div>
                                </th>
                                @for (int index = 0; index < 5; index++)
                                {
                                    DateOnly? slotDate = slots[index];
                                    if (slotDate is null)
                                    {
                                        <td></td>
                                    }
                                    else
                                    {
                                        ReadingRecordDto? reading = GetReadingForDate(slotDate.Value);
                                        bool isFuturePlan = reading is not null && reading.DateRead > DateOnly.FromDateTime(DateTime.Today);
                                        string? type = reading is null ? null : GetPsalmType(reading.PsalmId);
                                        <td>
                                            @if (_isBulkDeleteMode)
                                            {
                                                bool isSelected = IsBulkSelected(slotDate.Value);
                                                <div class="d-flex flex-column gap-1 @GetBulkCellClass(slotDate.Value)" role="button" @onclick="() => ToggleBulkSelection(slotDate.Value)">
                                                    <div class="fw-semibold">Día @slotDate.Value.Day</div>
                                                    @if (reading is not null)
                                                    {
                                                        <div>Salmo @reading.PsalmId - @GetPsalmTitle(reading.PsalmId)</div>
                                                    }
                                                    else
                                                    {
                                                        <div class="text-muted">Sin lectura</div>
                                                    }
                                                    <div class="text-muted">@(isSelected ? "Seleccionado" : "Seleccionar")</div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="d-flex flex-column gap-1 @GetCellClass(type)" @attributes="GetTooltipAttributes(type)">
                                                    @if (reading is not null)
                                                    {
                                                        <div class="fw-semibold">Salmo @reading.PsalmId - @GetPsalmTitle(reading.PsalmId)</div>
                                                        <div class="text-muted">Día @slotDate.Value.Day</div>
                                                        @if (isFuturePlan)
                                                        {
                                                            <div class="text-muted">Planificado</div>
                                                            @if (!string.IsNullOrWhiteSpace(reading.RuleApplied))
                                                            {
                                                                <div class="text-muted">@reading.RuleApplied</div>
                                                            }
                                                        }
                                                        <a class="link-primary" href="@GetBibleLink(reading.PsalmId)" target="_blank" rel="noopener noreferrer">
                                                            Leer en Bible.com
                                                        </a>
                                                        @if (!isFuturePlan)
                                                        {
                                                            <button class="btn btn-sm btn-outline-secondary" @onclick="() => StartEdit(reading)">
                                                                Editar
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <button class="btn btn-sm btn-outline-primary" @onclick="() => OpenCreate(slotDate.Value, reading.PsalmId)">
                                                                Registrar
                                                            </button>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <div class="text-muted">Día @slotDate.Value.Day</div>
                                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => OpenCreate(slotDate.Value)">
                                                            Agregar
                                                        </button>
                                                    }
                                                </div>
                                            }
                                        </td>
                                    }
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@if (_showModal)
{
    <div class="modal fade show" style="display:block;" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@FormTitle</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="CancelEdit"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Psalm</label>
                        <select class="form-select" @bind="_selectedPsalmId">
                            <option value="0">Select a psalm</option>
                            @foreach (PsalmDto psalm in _psalms)
                            {
                                <option value="@psalm.Id">@psalm.Id - @psalm.Title</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Date read</label>
                        <InputDate @bind-Value="_dateRead" class="form-control" />
                    </div>
                    @if (_modalError is not null)
                    {
                        <div class="alert alert-danger">@_modalError</div>
                    }
                </div>
                <div class="modal-footer">
                    @if (_editingId is not null)
                    {
                        <button class="btn btn-outline-danger me-auto" @onclick="() => DeleteReading(_editingId.Value)" disabled="@_isSaving">
                            Delete
                        </button>
                    }
                    <button class="btn btn-secondary" @onclick="CancelEdit" disabled="@_isSaving">Cancel</button>
                    <button class="btn btn-primary" @onclick="SaveReading" disabled="@(_isSaving || _selectedPsalmId <= 0)">
                        @(_isSaving ? "Saving..." : SubmitLabel)
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@if (_showExportModal)
{
    <div class="modal fade show" style="display:block;" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Export readings</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="CloseExportModal"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted">Export Sunday readings for the selected year or all readings (including future dates).</p>
                    <div class="row g-2 align-items-end">
                        <div class="col-6">
                            <label class="form-label">Scope</label>
                            <select class="form-select" @bind="_exportScope">
                                <option value="year">Year (@_year)</option>
                                <option value="all">All</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <label class="form-label">Format</label>
                            <select class="form-select" @bind="_exportFormat">
                                <option value="ics">ICS (calendar)</option>
                                <option value="json">JSON</option>
                            </select>
                        </div>
                    </div>
                    @if (_exportError is not null)
                    {
                        <div class="alert alert-danger mt-3">@_exportError</div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseExportModal" disabled="@_isExporting">Cancel</button>
                    <button class="btn btn-primary" @onclick="ExportReadings" disabled="@_isExporting">
                        @(_isExporting ? "Exporting..." : "Export")
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@if (_showImportModal)
{
    <div class="modal fade show" style="display:block;" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Import readings (JSON or ICS)</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="CloseImportModal"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted">Select a JSON or ICS export to analyze conflicts before importing.</p>
                    <div class="dropzone @(_isImportDragActive ? "is-active" : string.Empty)"
                         @ondragover="OnImportDragOver"
                         @ondragleave="OnImportDragLeave"
                         @ondrop="OnImportDrop"
                         @ondragover:preventDefault="true"
                         @ondrop:preventDefault="true">
                        <div class="dropzone-content">
                            <div class="fw-semibold">Drop JSON or ICS here</div>
                            <div class="text-muted">or click to browse</div>
                        </div>
                        <InputFile OnChange="OnImportFileSelected" accept=".json,.ics,application/json,text/calendar" class="dropzone-input" />
                    </div>
                    @if (!string.IsNullOrWhiteSpace(_importFileName))
                    {
                        <div class="text-muted mt-2">Selected: @_importFileName (@_importFileType?.ToUpperInvariant())</div>
                    }
                    @if (_importError is not null)
                    {
                        <div class="alert alert-danger mt-3">@_importError</div>
                    }
                    @if (_importPreview is not null)
                    {
                        <div class="mt-3">
                            <div class="fw-semibold">Records found: @_importPreview.TotalRecords</div>
                            @if (_importPreview.ConflictCount == 0)
                            {
                                <div class="text-success">No conflicts detected.</div>
                                <button class="btn btn-primary mt-2" @onclick="@(() => ImportReadings("ignore"))" disabled="@_isImporting">
                                    @(_isImporting ? "Importing..." : "Import")
                                </button>
                            }
                            else
                            {
                                string conflictLabel = _importPreview.ConflictCount == 1
                                    ? "Conflict found on 1 date."
                                    : $"Conflicts found on {_importPreview.ConflictCount} dates (more than one date).";
                                <div class="alert alert-warning mt-2">@conflictLabel</div>
                                <div class="text-muted">
                                    Conflicting dates: @string.Join(", ", _importPreview.ConflictDates.Select(d => d.ToString("yyyy-MM-dd")))
                                </div>
                                <div class="d-flex flex-wrap gap-2 mt-2">
                                    <button class="btn btn-danger" @onclick="@(() => ImportReadings("replace"))" disabled="@_isImporting">
                                        Replace dates
                                    </button>
                                    <button class="btn btn-outline-primary" @onclick="@(() => ImportReadings("ignore"))" disabled="@_isImporting">
                                        Ignore dates
                                    </button>
                                    <button class="btn btn-outline-secondary" @onclick="CancelImport" disabled="@_isImporting">
                                        Cancel
                                    </button>
                                </div>
                            }
                        </div>
                    }
                    @if (_importResultMessage is not null)
                    {
                        <div class="alert alert-success mt-3">@_importResultMessage</div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseImportModal" disabled="@_isImporting">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@if (_showBulkDeleteModal)
{
    <div class="modal fade show" style="display:block;" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm bulk delete</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="CloseBulkDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">
                        This action is permanent and will delete readings for the selected dates.
                    </div>
                    <p class="mb-2">Dates selected: @GetBulkSelectedCount()</p>
                    <label class="form-label">Type <strong>I am sure</strong> to confirm</label>
                    <input class="form-control" @bind="_bulkDeleteConfirmation" />
                    @if (_bulkDeleteError is not null)
                    {
                        <div class="alert alert-danger mt-3">@_bulkDeleteError</div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseBulkDeleteModal" disabled="@_isSaving">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmBulkDelete" disabled="@(!CanConfirmBulkDelete() || _isSaving)">
                        @(_isSaving ? "Deleting..." : "Delete")
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private List<PsalmDto> _psalms = [];
    private List<ReadingRecordDto> _readings = [];
    private Dictionary<DateOnly, ReadingRecordDto> _readingsByDate = [];
    private bool _isLoading = true;
    private bool _isSaving;
    private string? _loadError;
    private string? _saveError;
    private string? _saveMessage;
    private bool _isBulkDeleteMode;
    private HashSet<DateOnly> _bulkSelectedDates = [];
    private bool _showBulkDeleteModal;
    private string _bulkDeleteConfirmation = string.Empty;
    private string? _bulkDeleteError;
    private bool _showExportModal;
    private bool _showImportModal;
    private bool _isExporting;
    private string _exportScope = "year";
    private string _exportFormat = "ics";
    private string? _exportError;
    private bool _isImporting;
    private string? _importFileContent;
    private string? _importFileName;
    private string? _importFileType;
    private ReadingImportPreviewDto? _importPreview;
    private string? _importError;
    private string? _importResultMessage;
    private bool _isImportDragActive;
    private static readonly JsonSerializerOptions ImportJsonOptions = CreateImportJsonOptions();
    private int _year = DateTime.Today.Year;
    private int _selectedPsalmId;
    private DateOnly _dateRead = DateOnly.FromDateTime(DateTime.Today);
    private Guid? _editingId;
    private bool _showModal;
    private string? _modalError;
    private string FormTitle => _editingId is null ? "Add reading" : "Edit reading";
    private string SubmitLabel => _editingId is null ? "Save" : "Update";

    protected override async Task OnInitializedAsync()
    {
        await LoadPsalms();
        await LoadReadings();
    }

    private async Task LoadPsalms()
    {
        try
        {
            _psalms = (await ApiClient.GetPsalmsAsync()).OrderBy(p => p.Id).ToList();
        }
        catch (Exception ex)
        {
            _loadError = ex.Message;
        }
    }

    private async Task LoadReadings()
    {
        try
        {
            _loadError = null;
            _isLoading = true;
            DateOnly start = new(_year, 1, 1);
            DateOnly end = new(_year, 12, 31);
            _readings = (await ApiClient.GetReadingsAsync(start, end)).ToList();
            _readingsByDate = BuildReadingsByDate(_readings);
        }
        catch (Exception ex)
        {
            _loadError = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task ExportReadings()
    {
        try
        {
            _exportError = null;
            _isExporting = true;

            int? exportYear = _exportScope == "year" ? _year : null;
            string exportData = _exportFormat == "json"
                ? await ApiClient.ExportReadingsJsonAsync(_exportScope, exportYear)
                : await ApiClient.ExportReadingsIcsAsync(_exportScope, exportYear);

            string contentType = _exportFormat == "json" ? "application/json" : "text/calendar";
            string fileSuffix = _exportFormat == "json" ? "json" : "ics";
            string scopeLabel = _exportScope == "year" ? _year.ToString() : "all";
            string fileName = $"psalm-readings-{scopeLabel}.{fileSuffix}";
            await JsRuntime.InvokeVoidAsync("psalmsReading.downloadFile", fileName, exportData, contentType);
            await JsRuntime.InvokeVoidAsync("psalmsReading.showToast", "Export completed.", "success");
            CloseExportModal();
        }
        catch (Exception ex)
        {
            _exportError = ex.Message;
            await JsRuntime.InvokeVoidAsync("psalmsReading.showToast", $"Export failed: {ex.Message}", "danger");
        }
        finally
        {
            _isExporting = false;
        }
    }

    private async Task OnImportFileSelected(InputFileChangeEventArgs args)
    {
        _importError = null;
        _importResultMessage = null;
        _importPreview = null;
        _importFileContent = null;
        _importFileName = null;
        _importFileType = null;

        try
        {
            _isImporting = true;
            IBrowserFile file = args.File;
            _importFileName = file.Name;
            string extension = Path.GetExtension(file.Name).ToLowerInvariant();

            if (extension != ".json" && extension != ".ics")
            {
                _importError = "Only JSON or ICS files are supported.";
                return;
            }

            _importFileType = extension == ".ics" ? "ics" : "json";

            await using Stream stream = file.OpenReadStream(5 * 1024 * 1024);
            using var reader = new StreamReader(stream, Encoding.UTF8, true);
            string content = await reader.ReadToEndAsync();
            if (extension == ".json")
            {
                if (!TryValidateImportJson(content, out string? validationError))
                {
                    _importError = validationError ?? "Invalid JSON import file.";
                    return;
                }

                _importFileContent = content;
                _importPreview = await ApiClient.PreviewReadingsImportAsync(content);
            }
            else
            {
                if (!TryValidateImportIcs(content, out string? validationError))
                {
                    _importError = validationError ?? "Invalid ICS import file.";
                    return;
                }

                _importFileContent = content;
                _importPreview = await ApiClient.PreviewReadingsIcsImportAsync(content);
            }
        }
        catch (Exception ex)
        {
            _importError = ex.Message;
        }
        finally
        {
            _isImporting = false;
            _isImportDragActive = false;
        }
    }

    private void OnImportDragOver()
    {
        _isImportDragActive = true;
    }

    private void OnImportDragLeave()
    {
        _isImportDragActive = false;
    }

    private void OnImportDrop()
    {
        _isImportDragActive = false;
    }

    private async Task ImportReadings(string mode)
    {
        if (string.IsNullOrWhiteSpace(_importFileContent))
        {
            _importError = "Select a JSON or ICS file before importing.";
            return;
        }

        try
        {
            _importError = null;
            _importResultMessage = null;
            _isImporting = true;

            if (string.Equals(_importFileType, "ics", StringComparison.OrdinalIgnoreCase))
            {
                ReadingImportResultDto result = await ApiClient.ImportReadingsIcsAsync(_importFileContent, mode);
                _importResultMessage = $"Imported {result.ImportedCount} records. Skipped {result.SkippedCount}.";
            }
            else
            {
                ReadingImportResultDto result = await ApiClient.ImportReadingsAsync(_importFileContent, mode);
                _importResultMessage = $"Imported {result.ImportedCount} records. Skipped {result.SkippedCount}.";
            }

            await LoadReadings();
        }
        catch (Exception ex)
        {
            _importError = ex.Message;
        }
        finally
        {
            _isImporting = false;
        }
    }

    private void CancelImport()
    {
        _importFileContent = null;
        _importFileName = null;
        _importFileType = null;
        _importPreview = null;
        _importError = null;
    }

    private void OpenExportModal()
    {
        _exportError = null;
        _showExportModal = true;
    }

    private void CloseExportModal()
    {
        _showExportModal = false;
    }

    private void OpenImportModal()
    {
        _showImportModal = true;
    }

    private void CloseImportModal()
    {
        _showImportModal = false;
    }

    private static bool TryValidateImportJson(string json, out string? error)
    {
        if (string.IsNullOrWhiteSpace(json))
        {
            error = "Import file is empty.";
            return false;
        }

        try
        {
            ReadingExportDto? data = JsonSerializer.Deserialize<ReadingExportDto>(json, ImportJsonOptions);
            if (data is null)
            {
                error = "Unable to read import data.";
                return false;
            }

            if (data.SchemaVersion != 1)
            {
                error = $"Unsupported schema version: {data.SchemaVersion}.";
                return false;
            }

            foreach (ReadingExportRecordDto record in data.Records)
            {
                if (record.PsalmId <= 0)
                {
                    error = "PsalmId must be greater than 0.";
                    return false;
                }

                if (record.DateRead == default)
                {
                    error = "DateRead is required.";
                    return false;
                }
            }

            error = null;
            return true;
        }
        catch (JsonException ex)
        {
            error = ex.Message;
            return false;
        }
    }

    private static bool TryValidateImportIcs(string ics, out string? error)
    {
        if (string.IsNullOrWhiteSpace(ics))
        {
            error = "Import file is empty.";
            return false;
        }

        if (!ics.Contains("BEGIN:VEVENT", StringComparison.OrdinalIgnoreCase))
        {
            error = "ICS file has no events.";
            return false;
        }

        if (!ics.Contains("DTSTART", StringComparison.OrdinalIgnoreCase))
        {
            error = "ICS file is missing DTSTART.";
            return false;
        }

        error = null;
        return true;
    }

    private static JsonSerializerOptions CreateImportJsonOptions()
    {
        var options = new JsonSerializerOptions(JsonSerializerDefaults.Web);
        options.Converters.Add(new DateOnlyJsonConverter());
        return options;
    }

    private async Task SaveReading()
    {
        if (_selectedPsalmId <= 0)
        {
            _saveError = "Please select a psalm.";
            return;
        }

        try
        {
            _saveError = null;
            _saveMessage = null;
            _modalError = null;
            _isSaving = true;

            if (await HasDuplicateReading(_selectedPsalmId, _dateRead, _editingId))
            {
                _modalError = "This psalm already has a reading on that date.";
                return;
            }

            if (_editingId is null)
            {
                await ApiClient.CreateReadingAsync(new CreateReadingRequest(_selectedPsalmId, _dateRead));
                _saveMessage = "Reading saved.";
            }
            else
            {
                await ApiClient.UpdateReadingAsync(_editingId.Value, new UpdateReadingRequest(_selectedPsalmId, _dateRead));
                _saveMessage = "Reading updated.";
            }

            await LoadReadings();
            CloseModal();
        }
        catch (Exception ex)
        {
            _modalError = ex.Message;
        }
        finally
        {
            _isSaving = false;
        }
    }

